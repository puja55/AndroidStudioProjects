<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout android:tag="cards main container"
    android:weightSum="5"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent" card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2sp"
        card_view:cardCornerRadius="0dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto" android:id="@+id/card_view">


    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content">


    <LinearLayout android:weightSum="2"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/linr_first">


    <LinearLayout android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/linearlist">

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/listName"
        android:text="Name"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"/>

</LinearLayout>


    <LinearLayout android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/linearlist1">

    <TextView android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_width="wrap_content"
        android:id="@+id/list"
        android:text="Listing for 6 months"
        android:textSize="11dp"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

</LinearLayout>

</LinearLayout>


    <LinearLayout android:weightSum="2"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/linr_2nd"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linr_first">


    <LinearLayout android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="0.5">

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/rs"
        android:text="2,000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        android:background="@drawable/button_border"/>

</LinearLayout>


    <LinearLayout android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp">


    <LinearLayout android:weightSum="2"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/linearlist2">


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="11sp"
        android:id="@+id/price" android:text="Price"/>

</LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp">

    <TextView
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:id="@+id/price1"
        android:text="INR 2,000" android:textStyle="bold"/>

</LinearLayout>

</LinearLayout>


    <LinearLayout android:weightSum="2"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/linearlist21"
        android:layout_marginTop="10dp">


    <LinearLayout android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="11sp"
        android:id="@+id/limit" android:text="Limit"/>

</LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp">

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/limit1"
        android:textSize="11sp"
        android:text="180 Days"
        android:textStyle="bold"/>

</LinearLayout>

</LinearLayout>

</LinearLayout>

</LinearLayout>

    <Button android:layout_height="40sp"
        android:layout_width="130dp"
        android:id="@+id/subscribebtn"
        android:text="Subscribe"
        android:textSize="20dp"
        android:layout_below="@+id/linr_2nd"
        android:textColor="@color/white"
        android:background="@drawable/button_style"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="5sp"
        android:textAlignment="center"/>

</RelativeLayout>

</android.support.v7.widget.CardView>

</LinearLayout>

